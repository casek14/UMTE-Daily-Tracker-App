<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.casek.beta01.add_subcategory">

    <Button
        android:id="@+id/btn_subcategory_add"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_value_subcategory_create"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="443dp" />

    <TextView
        android:id="@+id/txt_add_subcategory_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_subcategory_heading"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/txt_subcategory_add_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="(nazev kategorie)"
        tools:layout_editor_absoluteY="33dp"
        tools:layout_editor_absoluteX="8dp" />


</android.support.constraint.ConstraintLayout>
